rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }
    
    // Profiles collection
    match /profiles/{profileId} {
      allow read: if true; // Public profiles
      allow create, update: if request.auth != null && request.auth.uid == request.resource.data.user_id;
      allow delete: if false;
    }
    
    // Lessons collection
    match /lessons/{lessonId} {
      allow read: if true; // Public lessons
      allow create, update: if request.auth != null && request.auth.uid == request.resource.data.creator_id;
      allow delete: if request.auth != null && request.auth.uid == resource.data.creator_id;
    }
    
    // Purchases collection
    match /purchases/{purchaseId} {
      allow read: if request.auth != null && (
        request.auth.uid == resource.data.user_id || 
        request.auth.uid == resource.data.creator_id
      );
      allow create: if request.auth != null && request.auth.uid == request.resource.data.user_id;
      allow update, delete: if false;
    }
    
    // Categories collection
    match /categories/{categoryId} {
      allow read: if true; // Public categories
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Waitlist collection
    match /waitlist/{entryId} {
      allow read: if request.auth != null && request.auth.token.admin == true;
      allow create: if true; // Allow anyone to join waitlist
      allow update, delete: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all categories for anyone
    match /categories/{categoryId} {
      allow read: if true;
      // Only allow writes during setup or by authenticated admin users
      allow write: if request.auth != null || true; // Temporarily allow all writes for setup
    }
    
    // Default rule - require authentication for other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
