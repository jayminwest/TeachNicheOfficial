rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // Profile images
    match /profiles/{userId}/avatar {
      allow read: if true; // Public profile images
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Lesson thumbnails
    match /lessons/{lessonId}/thumbnail {
      allow read: if true; // Public thumbnails
      allow write: if request.auth != null;
    }
    
    // Lesson videos (protected)
    match /lessons/{lessonId}/video {
      allow read: if request.auth != null; // Only authenticated users
      allow write: if request.auth != null;
    }
    
    // Temporary uploads
    match /uploads/{userId}/{fileName} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Test files (for development only)
    match /test/{allTestFiles=**} {
      allow read, write: if true;
    }
    
    // Verification files (for testing configuration)
    match /verification/{allVerificationFiles=**} {
      allow read, write: if true;
    }
  }
}
