rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // Profile images
    match /profiles/{userId}/avatar.{extension} {
      allow read: if true; // Public profile images
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Lesson thumbnails
    match /lessons/{lessonId}/thumbnail.{extension} {
      allow read: if true; // Public thumbnails
      allow write: if request.auth != null && request.resource.metadata.creatorId == request.auth.uid;
    }
    
    // Lesson videos (protected)
    match /lessons/{lessonId}/video.{extension} {
      allow read: if request.auth != null; // Only authenticated users
      allow write: if request.auth != null && request.resource.metadata.creatorId == request.auth.uid;
    }
    
    // Temporary uploads
    match /uploads/{userId}/{fileName} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
